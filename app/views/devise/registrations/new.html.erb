<link rel="stylesheet" href="devise.scss">
<div id="SignUp" class="container m-5 p-2 border w-25">
  <header>
    <h2>Sign Up</h2>
  </header>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-floating mb-2">
      <%= f.email_field :email, id: "floatingInput", autocomplete: "email", class: "form-control", placeholder: "Email" %>
      <label for="floatingInput">Email address</label> 
    </div>

    <div class="field form-floating mb-2">
      <%= f.text_field :booking_link, id: "floatingInput", autocomplete: "email", class: "form-control", placeholder: "Email" %>
      <label for="floatingInput">Booking Link</label> 
    </div>

    <div class="field form-floating mb-4">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Name" %>
      <label for="floatingInput">Name</label>
    </div>
    
    <div class="field form-floating mb-2">
      
      <%= f.password_field :password, class: "form-control", placeholder: "New Password", id: "floatingInput" %>
      <label for="floatingInput">New Password</label>
      
    </div>

    <div class="field form-floating mb-2">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "New Password", id: "floatingInput" %>
      <label for="floatingInput">Password Confirmation</label>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "actions btn btn-primary w-100"  %>
    </div>
  <% end %>

  <div>Already a member? 
    <%= render "devise/shared/links" %>
  </div>

</div>

