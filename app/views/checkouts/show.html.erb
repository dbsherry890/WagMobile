<%= turbo_frame_tag "modal" do %>
  <div class="showmodal">
    
    <h1 class="text-dark">Hourly </h1>
      <%= image_tag("Homepage/Hourly.png", class: "card-img-top", style: "height: auto; max-width: 75%;") %>
      <div class="description">
        <h3>Drop your pup off while you do errands!</h3>
        <div class="d-flex justify-content-between">
          <h5>$7.00</h5>
          <div class="def-number-input number-input">
            <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()"
              class="minus"></button>
            <input class="quantity fw-bold text-black" min="0" name="quantity" value="1"
              type="number">
            <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
              class="plus"></button>
          </div>
          
        </div>
        
        <form action="/create-checkout-session" method="POST">
          <%= render partial: 'pay/stripe/checkout_button', locals: {
            session: @checkout_session,
            title: "Buy Now"} 
          %>
        </form>
        <%= link_to "Cancel", "#", data: {
          controller: "modals",
          action: "modals#close"
        }, class: "cancel-button" %>
      </div>
      
  </div>
<% end %>
